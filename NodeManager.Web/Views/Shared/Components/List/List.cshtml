@{
}
@model NodeManager.Web.Models.NodesViewModel

<div class="content_nodes">
            <div class="nodes">
                @foreach (var nodI in Model.Symbols)
                {
                    <div class="node">
                        <img class="img-responsive center-block" src="@nodI.Image"/>
                        <button class="btn" onclick="window.location.href='#@nodI.Id';"><span class="fas fa-search-plus"></span></button>
                        <div class="node_name">
                            <p title="@nodI.Name">@FamSymbolViewModel.GetCutString(nodI.Name)</p>
                        </div>
                        <div class="lightbox" id="@nodI.Id">
                            <figure>
                                <button class="close" onclick="window.location.href='#';"><span class="fas fa-times"></span></button>
                                <button class="dwn"><span class="far fa-save fa-lg" style="color: white"></span></button>
                                <figcaption>
                                    <p>@nodI.Name</p>
                                    <img class="img-responsive center-block" src="@nodI.Image"/>
                                </figcaption>
                            </figure>
                        </div>
                    </div>
                }
            </div>
        </div>

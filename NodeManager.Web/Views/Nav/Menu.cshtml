@model System.Collections.Generic.IEnumerable<NodeManager.Web.Models.NodeInfo>

@{
    Layout = null;
}


@Html.ActionLink("Домой", "List", "Node", null,
     new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var link in Model)
 {
     @Html.RouteLink(link.Node.Name, new
     {
         controller = "Node",
         action = "List",
         category = link.Node.Name,
     }, new
     {
         @class = "btn btn-block btn-default btn-lg"
         + (link.IsSelected? " btn-primary" : "")
     })
 }